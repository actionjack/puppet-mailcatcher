#!/bin/sh
### BEGIN INIT INFO
# Provides:          mailcatcher
# Required-Start:    $local_fs $remote_fs $syslog $named $network $time
# Required-Stop:     $local_fs $remote_fs $syslog $named $network
# Should-Start:      
# Should-Stop:       
# Default-Start:     2 3 4 5
# Default-Stop:      0 1 6
# Short-Description: mailcatcher is a captive smtp server with a web interface which allows you to view "sent" emails.
### END INIT INFO


# Process ID - this will be updated using the updatepid function below.
PID=""

updatepid(){
   PID=$(ps aux|grep -E "ruby(.*)* <%= @mailcatcher_path %>/[m]ailcatcher" |awk '{print $2}')
}

start(){
   updatepid
   if [ ! -z $PID ] ; then
      echo "Mailcatcher is already running."
      exit 1
   else
      <%= @mailcatcher_path %>/mailcatcher <%= @options.join(' ') %>
   fi
}

stop(){
   updatepid
   if [ ! -z $PID ] ; then
      kill $PID
      return $?
   fi
}

status(){
   updatepid
   if [ ! -z $PID ] ; then
      echo "Mailcatcher is running."
      exit 0
   else
     echo "Mailcatcher is not running."
     exit 3
   fi
}

case "$1" in
  start)
    start
    ;;
  stop)
    stop
    ;;
  restart)
    stop
    updatepid
    start
    ;;
  status)
    status
    ;;
  *)
    echo "Usage: /etc/init.d/mailcatcher {start|stop|restart|status}"
    exit 1
esac

exit $?
